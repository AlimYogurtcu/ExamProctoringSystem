@{
    ViewBag.Title = "E-Proctoring - Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["user"] == null) 
{
<body id="login" class="bg-light overflow-hidden noprint" oncontextmenu="return false">
    <div class="modal fade" id="signinModal" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <img class="mx-auto" src="~/Images/logo150x150.png" alt="" style="width:150px;height:150px;" />
                </div>
                <div class="modal-body">
                    @if (@ViewBag.errorMessage != null)
                    {
                        <strong style="color:red;">@ViewBag.errorMessage</strong>
                    }
                    else
                    {
                        //doNothing
                    }
                    @using (Html.BeginForm("ExamPage", "", FormMethod.Post))
                    {
                        <label for="inputName" class="visually-hidden">User Name</label>
                        <input type="text"
                               accesskey="Username"
                               name="account_username"
                               class="form-control mb-2"
                               placeholder="User Name"
                               tabindex="1"
                               autofocus />
                        <label for="inputPassword" class="visually-hidden">Password</label>
                        <input type="password"
                               accesskey="Password"
                               name="account_password"
                               class="form-control"
                               placeholder="Password"
                               tabindex="2">
                        <div class="mt-3">
                            <button class="btn btn-sm btn-outline-primary float-end mt-2"
                                    type="submit"
                                    tabindex="3">
                                Sign in
                            </button>
                            <ul>
                                <li>
                                    <a href="~/Downloads/E-Proctoring.zip">Application</a>
                                </li>
                            </ul>
                        </div>
                    }
                    @*<button class="btn btn-sm btn-outline-secondary float-end mt-2"
                            id="newStudent"
                            tabindex="4"
                            onclick="registerModalShow()">
                        New Student
                    </button>*@
                </div>
            </div>
        </div>
    </div>

